# Mercury Investment Platform API - Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
# Get your MongoDB URI from MongoDB Atlas or use local MongoDB
MONGODB_URI=mongodb://localhost:27017/mercury-investment

# JWT Configuration
# IMPORTANT: Generate a strong secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-generated-secret-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration (optional)
# Set this to your frontend URL in production
FRONTEND_URL=http://localhost:3030
